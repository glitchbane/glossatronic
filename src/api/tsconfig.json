{
	// See https://go.microsoft.com/fwlink/?LinkId=759670
	// for the documentation about the jsconfig.json format
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"outDir": "dist",
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": [
		"server.ts",
		"routes/**/*.ts",
		"db/**/*.ts",
		"app/**/*.ts",
		"test/**/*.ts"
	],

	"exclude": [
		"node_modules"
	]
}
